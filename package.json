{
  "name": "jcc2d",
  "version": "1.6.5",
  "description": "a light weight canvas 2d render & an awesome animator",
  "main": "build/jcc2d.min.js",
  "module": "esm/jcc2d.js",
  "directories": {
    "example": "examples"
  },
  "files": [
    "CHANGELOG.md",
    "README.md",
    "build",
    "esm",
    "src"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "watch": "node scripts/build.js --watch",
    "prever": "npm run build && git add -A && git commit -m 'release: release new version'",
    "ver": "standard-version -m 'chore(release): v%s'",
    "postver": "git push --follow-tags origin master && npm publish",
    "docs": "jsdoc -c scripts/jsdoc.conf.json -R README.md",
    "http": "hs -o",
    "test": "karma start",
    "lint": "eslint .",
    "fix": "eslint --fix ./src",
    "precommit": "npm run lint",
    "commitmsg": "validate-commit-msg"
  },
  "keywords": [
    "canvas",
    "canvas 2d",
    "renderer",
    "browser",
    "animation",
    "canvas engine",
    "javascript"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:jasonChen1982/jcc2d.git"
  },
  "author": {
    "name": "jason Chen",
    "email": "jasonchen1882@gmail.com",
    "url": "http://jason82.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@pixi/jsdoc-template": "^2.2.0",
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "chalk": "^2.3.0",
    "eslint": "^4.11.0",
    "eslint-config-google": "^0.9.1",
    "http-server": "^0.10.0",
    "jsdoc": "^3.5.5",
    "karma": "^1.7.1",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "mocha": "^4.0.1",
    "rollup": "0.43.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-watch": "^4.3.1",
    "standard-version": "^4.2.0",
    "uglify-js": "^3.1.10",
    "validate-commit-msg": "^2.14.0",
    "yargs": "^7.1.0"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "release",
        "build",
        "revert",
        "deps"
      ]
    }
  }
}
