{
  "name": "jcc2d",
  "version": "1.8.12",
  "description": "a light weight canvas 2d render & an awesome animator",
  "main": "build/jcc2d.js",
  "directories": {
    "example": "examples"
  },
  "files": [
    "CHANGELOG.md",
    "README.md",
    "build",
    "src"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:dev": "rollup -c -w",
    "prever": "npm run build && git add -A && git commit -m 'release: release new version'",
    "ver": "standard-version -m 'chore(release): v%s'",
    "postver": "git push --follow-tags origin master && npm publish",
    "docs": "jsdoc -c scripts/jsdoc.conf.json -R README.md",
    "http": "hs -o",
    "test": "karma start",
    "lint": "eslint .",
    "fix": "eslint --fix ./src",
    "precommit": "npm run lint",
    "commitmsg": "validate-commit-msg"
  },
  "keywords": [
    "canvas",
    "canvas 2d",
    "renderer",
    "browser",
    "animation",
    "canvas engine",
    "javascript"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:jasonChen1982/jcc2d.git"
  },
  "author": {
    "name": "jason Chen",
    "email": "jasonchen1882@gmail.com",
    "url": "http://jason82.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@pixi/jsdoc-template": "^2.2.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-external-helpers": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "chai": "^4.1.2",
    "chalk": "^2.3.0",
    "eslint": "^4.11.0",
    "eslint-config-google": "^0.9.1",
    "http-server": "^14.1.1",
    "jaguarjs-jsdoc": "^1.1.0",
    "jsdoc": "^3.5.5",
    "karma": "^1.7.1",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "mocha": "^4.0.1",
    "rollup": "^1.17.0",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-buble": "^0.19.4",
    "rollup-plugin-uglify": "^6.0.2",
    "standard-version": "^4.2.0",
    "uglify-js": "^3.1.10",
    "validate-commit-msg": "^2.14.0",
    "yargs": "^7.1.0"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "release",
        "build",
        "revert",
        "deps"
      ]
    }
  }
}
